{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["node", "@types/bcrypt", "@types/jsonwebtoken"]
  },
  "include": ["src/**/*.ts", "index.ts", "src/index.ts"],
  "exclude": ["node_modules"]
}
